% \begin{macro}{\ImportEncoding}
%    \begin{macrocode}
\DeclareDocumentCommand \ImportEncoding {m}
  {
    \bool_if:NF \l_@@_defining_encoding_bool
      { \@@_error:nn {only-inside-encdef} \ImportEncoding }
    \tl_if_eq:nnF {#1} {TU} { \@@_error:n {only-import-tu} }
    \tl_set_eq:NN \l_@@_unicode_name_tl \UnicodeEncodingName
    \tl_set_eq:NN \UnicodeEncodingName \LastDeclaredEncoding
    \input{tuenc.def}
    \tl_set_eq:NN \UnicodeEncodingName \l_@@_unicode_name_tl
  }
%    \end{macrocode}
% \end{macro}
